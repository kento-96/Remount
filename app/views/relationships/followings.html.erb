<div class="container mt-5">
  <div class="row">
    <div class="follow mx-auto col-12">
      <h2>フォローユーザー</h2>
        <% if @users.exists? %>
          <table class="table">
             <thead>
               <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
               </tr>
             </thead>
             <tbody>
               <% @users.each do |user| %>
               <tr class="text-center">
                 <td><%= attachment_image_tag user, :profile_image, :fill,60,60,fallback:"no_image.jpg" ,size: "50x50"%><br>
                 <%= user.name %>
                 </td>
                 <td>投稿<%= user.posts.count %></td>
                 <td>フォロワー数<%= user.followers.count %></td>
                 <td> <%=link_to "詳細",user_path(user.id)%></td>
               </tr>
               <% end %>
             </tbody>
           </table>
         <% else %>
           <p>ユーザーはいません</p>
        <% end %>
    </div>
  </div>
</div>