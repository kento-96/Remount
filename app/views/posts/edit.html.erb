<div class="container">
  <h2 class="text-center my-5">投稿編集</h2>
  <div class="row">
    <div class="col-8 offset-2 mb-5">
      
      <% if @post.errors.any? %>
        <div class="text-danger" role="alert">
          <%= @post.errors.count %>件のエラーが発生しました
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
       
       <%= form_with model:@post ,local:true do |f| %>
      
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :タイトル, class:"form_label" %>
            <%= f.text_field :title, placeholder:"タイトル",class:"form-control mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :投稿内容, class:"form_label" %>
            <%= f.text_area :body, size: "50x5", placeholder:"ここに投稿内容を記述します",class:"form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :タグ %>
            <%= f.text_field :tag_names, placeholder:",で区切ってください" ,class:"form-control mb-3"%>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :画像の選択, class:"form_label"%>
            <%= f.attachment_field :image,class:"mb-3 ml-3"%>
          </div>
        </tr>
        </tr>
        <tr>
        <div class="form-action d-flex justify-content-around">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
          <%= link_to "投稿詳細へ戻る",post_path, class:"btn btn-outline-secondary" %>
        </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
