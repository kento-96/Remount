<p>検索</p>
<%= form_tag(search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<h2 class="post-index-title-title">"<%= @value %>"の検索結果</h2>

<div class="texts-wrapper">
   <div class="contents-title text-center">
     <h3>投稿一覧</h3>
     <div class="row">
       <% @posts.each do |post| %>
         <div class="col-12 col-md-6 col-lg-4">
           <div class="card">
             <div>
                <%= link_to post_path(post) do %>
                <%= attachment_image_tag post, :image, fallback: "no_image.jpg",class:"card-img-top index-img" %>
                <% end %>
             </div>
             <p class="post-index-user-name">
                <i class="fas fa-user-circle"></i>
                <%= post.user.name %>
             </p>
             <p>
               <i class="far fa-comment"></i>
                <%= post.comments.count %>
                <%= render "favorites/favorites", post: post %>
             </p>
             <p class="post-index-post-tag">
               <% post.tags.each do |tag| %>
                  <%= tag.tag_name %>
               <% end %>
             </p>
               <div class="card-body">
                 <p class="card-title">
                   <%= post.title %>
                 </p>
                 <p class="card-text">
                   <%= post.body.truncate(30) %>
                 </p>
                 <p class="card-text">
                    <time>
                      <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                    </time>
                 </p>
               </div>
           </div>
         </div>
       <% end %>
     </div>
   </div>
 </div>

 <div class="post-index-pagination">
    <%= paginate @posts %>
 </div>