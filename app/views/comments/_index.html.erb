<% post.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <thead>
    <tr class="comment-user-profile-box">
      <th class="comment-user-image">
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image.jpg", class: "comment-image",size:"50x50" %>
        <% end %>
        <p><%= comment_user.name %></p>
        <td class="comment-user-content text-left">
         <%= simple_format(comment.comment) %>
        </td>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr class="comment-delete-box">
      <td class="comment-delete">
        <% if current_user == comment.user %>
    	    <%= link_to '削除', post_comment_path(comment.post_id, comment.id), class: 'btn-sm btn-danger comment-delete',remote: true, method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
<% end %>