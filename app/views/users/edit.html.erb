<div class="contianer mt-5 mb-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>プロフィール編集</h1>
      <%= form_with model:@user ,local:true do |f| %>
        <div class="form-group">
          <lavel for="title">Name</lavel>
          <%= f.text_field :name, class:"form-control user_name" %>
        </div>

        <div class="form-group">
          <lavel for="body">Image</lavel>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="form-group">
          <lavel for="body">Inroduction</lavel>
          <%= f.text_area :introduction, class:"form-control user_body" %>
        </div>

        <div class="actions">
          <%= f.submit '更新',class:"btn btn-success" %>
          <%= link_to "退会する", unsubscribe_users_path,class:"btn btn-danger ml-5"%>
        </div>
      <% end %>
    </div>
  </div>
</div>