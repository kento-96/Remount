<!DOCTYPE html>
<html>
  <head>
    <title>Remount</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div id="wrapper">
    <%= render "layouts/header"%>
     <main>
       <div id="flash">
        <%= render "layouts/flash" %>
       </div>
       <%= yield %>
     </main>
    <%= render "layouts/footer"%>
    </div>
  </body>
</html>
